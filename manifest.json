{
    "manifest_version": 2,
    "name": "Blur Images",
    "version": "1.0",
    "description": "Blur images and show up on mouve over",

    "icons": {
        "32": "icons/blur-icon.jpeg"
    },

    "background": {
        "scripts": ["main.js"]
    },

    "content_scripts": [{
        "matches": ["https://web.whatsapp.com/*"],
        "css": ["blur-images.css"]
    }],

    "browser_action": {
        "default_icon": "icons/blur-icon.jpeg",
        "default_title": "Blur Images"
    },

    "permissions": [
        "storage"
    ],

    "options_ui": {
        "page": "settings.html",
        "browser_style": true
    }
}
